<%- include layout %>

   <ol class = "breadcrumb">
   		<li><a href="/admin">管理首页</a></li>
   		<li><span>内容添加</span></li>
   </ol>
   <h3 style="padding-left:20px;">内容添加</h3>
   <!-- 添加表单 -->
   <form method = "post" style="padding-left:20px;">
   		   <div class = "form-group" style="width:150px;">
               <label for="title">分类：</label>
                  <select name="category" id="category" class = "form-control">
                     <!-- 这里的分类我们需要从数据库中进行读取 -->
                     <% for (var i = 0;i< categories.length;i++){ %>
                     <option value="<%= categories[i]._id.toString() %>"><%= categories[i].name %></option>
                     <% } %>
                  </select>
            </div>
             <div class="form-group" style="width:250px;">
                 <label for="title">标题：</label>
                 <input type="text" class="form-control" name = "title" placeholder="请输入内容标题">
             </div>
             <div class="form-group" style="width:250px;">
                 <label for="description">简介：</label>
                 <textarea type="text" class="form-control" name = "description" placeholder="请输入内容简介" rows = "1"></textarea>
             </div>
             <div class="form-group" style="width:500px;">
                 <label for="content">内容：</label>
                 <textarea type="text" class="form-control" name = "content" placeholder="请输入内容" rows = "10"></textarea>
             </div>
           <button type="submit" class="btn btn-default btn-primay">提交</button>
   </form>
