<%- include layout %>

<!-- {% block main %} -->
 <ol class = "breadcrumb">
 		<li><a href="/admin">管理首页</a></li>
 		<li><span>内容首页</span></li>
 </ol>
 <h3>内容列表</h3>
   <table class="table table-striped">
	  <!-- 表头 -->
	  <tr>
	  	<th>ID</th>
	  	<th>分类名称</th>
	  	<th>标题</th>
	  	<th>作者</th>
	  	<th>添加时间</th>
	  	<th>阅读量</th>
	  	<th>操作</th>
	  </tr>
	  <!-- 通过模板循环，遍历数据数据 -->
	  <% for (var i = 0;i < contents.length;i++){ %>
	  <tr>
	  	<td><%= contents[i]._id.toString() %></td>
	  	<td><%= contents[i].category.name %></td>
	  	<td><%= contents[i].title %></td>
	  	<td><%= contents[i].user.username %></td>
	  	<td><%= contents[i].addTime.toLocaleDateString() %> <%= contents[i].addTime.toLocaleTimeString() %></td>
	  	<td><%= contents[i].views %></td>
	  	<td>
	  		<a href="/admin/content/edit?id=<%= contents[i]._id.toString() %>">修改</a>
	  		<a href="/admin/content/delete?id=<%= contents[i]._id.toString() %>">删除</a>
	  	</td>
	  </tr>
	  <% } %>
	</table>
	<% include page %>
